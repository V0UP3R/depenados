// Depenados - Schema do Banco de Dados
// Histórias épicas de loucura, bebedeira e irmandade

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Story {
  id          String   @id @default(cuid())
  title       String
  content     String
  excerpt     String?
  coverImage  String?
  author      String
  authorId    String?  // Membro que escreveu (opcional)
  authorMember Member? @relation("StoryAuthor", fields: [authorId], references: [id])
  tags        String?  // JSON string array
  featured    Boolean  @default(false)
  eventId     String?  // Evento relacionado (opcional)
  event       Event?   @relation("EventStories", fields: [eventId], references: [id])
  participants Member[] @relation("StoryParticipants") // Membros que participaram
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  media       Media[]
}

model Media {
  id        String   @id @default(cuid())
  type      String   // 'image' | 'video'
  url       String
  caption   String?
  storyId   String
  story     Story    @relation(fields: [storyId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
}

// Contador de eventos épicos dos Depenados
model Counter {
  id        String   @id @default("main") // Singleton - apenas um registro
  brigas    Int      @default(0)          // Contador de brigas
  acidentes Int      @default(0)          // Contador de acidentes
  pts       Int      @default(0)          // Contador de PTs (Perda Total)
  updatedAt DateTime @updatedAt
}

// Eventos/Rolês dos Depenados
model Event {
  id          String    @id @default(cuid())
  title       String                          // Nome do evento
  description String?                         // Descrição do evento
  location    String?                         // Local do evento
  date        DateTime                        // Data e hora do evento
  coverImage  String?                         // Imagem de capa
  createdBy   String                          // Quem criou o evento
  creatorId   String?                         // Membro que criou (opcional)
  creator     Member?   @relation("EventCreator", fields: [creatorId], references: [id])
  status      String    @default("upcoming")  // upcoming, ongoing, completed, cancelled
  stories     Story[]   @relation("EventStories") // Histórias relacionadas ao evento
  participants Member[] @relation("EventParticipants") // Membros participantes
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

// Membros da irmandade Depenados
model Member {
  id              String    @id @default(cuid())
  name            String                          // Nome real
  nickname        String    @unique               // Apelido de guerra
  avatar          String?                         // Foto do membro
  bio             String?                         // Descrição/bio
  role            String?                         // Papel no grupo (ex: "O Bêbado Mor", "O Contador de Histórias")
  storiesAuthored Story[]   @relation("StoryAuthor")      // Histórias que escreveu
  storiesIn       Story[]   @relation("StoryParticipants") // Histórias em que participou
  eventsCreated   Event[]   @relation("EventCreator")      // Eventos que criou
  eventsIn        Event[]   @relation("EventParticipants") // Eventos em que participou
  joinedAt        DateTime  @default(now())
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
}
